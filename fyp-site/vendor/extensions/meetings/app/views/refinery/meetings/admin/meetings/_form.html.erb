<%= form_for [refinery, :meetings_admin, @meeting] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @meeting,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :meeting_title -%>
    <%= f.text_field :meeting_title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:agenda],
                :object => "meetings/meeting" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.meetings.admin.meetings.meeting'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @meeting.meeting_title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
