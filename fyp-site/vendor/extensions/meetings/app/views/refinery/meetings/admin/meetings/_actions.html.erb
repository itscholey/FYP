<ul>
  <% if ::Refinery::Meetings::Admin::MeetingsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.meetings_admin_meetings_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_meetings_admin_meeting_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Meetings::Admin::MeetingsController.sortable? && ::Refinery::Meetings::Meeting.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.meetings_admin_meetings_path,
                     t('.reorder', what:  "Meetings"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.meetings_admin_meetings_path,
                      t('.reorder_done', what: "Meetings"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
