<% content_for :body_content_title do %>
  <%= @meeting.meeting_title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Meeting Title</h1>
    <p>
      <%=raw @meeting.meeting_title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @meeting.date %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @meeting.location %>
    </p>
  </section>
  <section>
    <h1>Agenda</h1>
    <p>
      <%=raw @meeting.agenda %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="meetings">
      <% @meetings.each do |meeting| %>
        <li>
          <%= link_to meeting.meeting_title, refinery.meetings_meeting_path(meeting) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
