<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(meeting) -%>">
  <span class='title'>
    <%= meeting.meeting_title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.meetings_meeting_path(meeting), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_meetings_admin_meeting_path(meeting), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.meetings_admin_meeting_path(meeting), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: meeting.meeting_title)}}  ) %>
  </span>
</li>
